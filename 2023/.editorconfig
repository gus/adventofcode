# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 100

# Makefiles always use tabs for indentation
[{Makefile,*.mk}]
indent_style = tab

[*.json]
insert_final_newline = ignore

# Go likes tabs
[*.go]
indent_style = tab

# YAML
[{*.yml,*.yaml}]
indent_size = 2

# Hashkell likes 2 spaces I guess
[*.hs]
indent_size = 2
